                        <Separator orientation="VERTICAL" prefHeight="24.0" />
                     </graphic>
                  </Label>
               </children>
            </AnchorPane>
            <ToolBar fx:id="toolBar" prefHeight="35.0" prefWidth="596.0">
              <items>
                  <Spinner id="size" fx:id="sizeSetter" />
                  <ChoiceBox fx:id="shapeChooser" prefWidth="150.0" />
                  <Button id="undoButton" fx:id="buttonUndo" text="Undo" />
                  <Button id="redoButton" fx:id="buttonRedo" text="Redo" />
                  <ColorPicker id="colorPicker" fx:id="colorPicker" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Untitled Tab 1">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab text="Untitled Tab 2">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
