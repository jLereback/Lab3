<BorderPane minHeight="300.0" minWidth="350.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="450.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.iths.labb.Controller">
    <top>
        <VBox prefHeight="52.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
                <MenuBar maxHeight="25.0" minHeight="25.0" prefHeight="25.0" prefWidth="550.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <Menu text="File">
                        <CheckMenuItem fx:id="connectToServer" onAction="#connectToServer" text="Connected to Server" />
                        <MenuItem fx:id="menuSave" onAction="#save" text="Save" />
                        <SeparatorMenuItem />
                        <MenuItem fx:id="menuExit" onAction="#exit" text="Exit" />
                    </Menu>
                    <Menu text="Edit">
                        <MenuItem fx:id="menuUndo" onAction="#undoClicked" text="Undo" />
                        <MenuItem fx:id="menuRedo" onAction="#redoClicked" text="Redo" />
                    </Menu>
                    <Menu text="View">
                        <CheckMenuItem fx:id="viewUndo" selected="true" text="Show undo" />
                        <CheckMenuItem fx:id="viewRedo" selected="true" text="Show redo" />
                    </Menu>
                    <Menu text="Command">
                        <MenuItem disable="true" text="To change color, hold CTRL and click on specific shape" />
                        <MenuItem disable="true" text="To change size, hold SHIFT and click on specific shape" />
                    </Menu>
                </MenuBar>
                <Label fx:id="connectedLabel" alignment="CENTER" prefHeight="26.0" prefWidth="141.0" text="Connected to server" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <graphic>
                        <Separator orientation="VERTICAL" prefHeight="24.0" />
                    </graphic>
                </Label>
            </AnchorPane>
            <ToolBar prefHeight="35.0" prefWidth="596.0">
                <ChoiceBox fx:id="shapeType" prefWidth="100.0" />
                <ColorPicker fx:id="colorPicker" prefWidth="100.0" />
                <Spinner fx:id="sizeSpinner" amountToStepBy="2.0" editable="true" max="400.0" min="1.0" prefWidth="75.0" />
            <ToggleButton fx:id="brush" text="Activate Brush" onAction="#updateBrush"/>
                <Button fx:id="undoButton" onAction="#undoClicked" text="Undo" />
                <Button fx:id="redoButton" onAction="#redoClicked" text="Redo" />
            </ToolBar>
        </VBox>
    </top>
    <center>
        <HBox prefHeight="554.0" prefWidth="1242.0" BorderPane.alignment="TOP_LEFT">
            <TitledPane fx:id="chatArea" alignment="TOP_LEFT" prefHeight="390.0" prefWidth="150.0" text="Chat" wrapText="true" BorderPane.alignment="CENTER">
                <AnchorPane minWidth="150.0" prefHeight="364.0" prefWidth="150.0">
                    <ListView prefHeight="221.0" prefWidth="142.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                    <TextField AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                </AnchorPane>
            </TitledPane>
            <Canvas fx:id="paintingArea" height="800.0" onMouseClicked="#canvasClicked" onMouseDragged="#canvasDragged" width="1600.0" />
        </HBox>
    </center>
    <left>

    </left>
</BorderPane>
